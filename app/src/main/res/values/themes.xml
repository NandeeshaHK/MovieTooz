<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">#121212</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.MovieTooz" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#121212</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/movie_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.MovieTooz.Main</item>
    </style>

    <!-- Main Theme (Post-Splash) -->
    <style name="Theme.MovieTooz.Main" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">#121212</item>
        <item name="android:windowBackground">#121212</item>
    </style>
</resources>
